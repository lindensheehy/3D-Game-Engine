<main>

    <filledRect posx=_posx posy=_posy width=_width height=20 color=background opacity=0.8>

        <outlinedRect posx=5 posy=5 width=_width-10 height=15 color=border thickness=2>
            <gradient colorStart=0xFF0000 colorEnd=0x00FF00 direction=horizontal/>
            <shadow offsetX=2 offsetY=2 blur=4 color=0x000000 opacity=0.5/>
        </outlinedRect>

        <textInput posx=0 posy=0 width=_width tag=_tag fontSize=14 fontFamily="Arial" color=0xFFFFFF/>

        <button posx=_posx+50 posy=_posy+30 width=100 height=40 label="Click Me" color=buttonColor action="submitForm">
            <hoverEffect color=0xFF00FF scale=1.1/>
            <pressEffect color=0x0000FF scale=0.95/>
            <tooltip text="Click this button to submit the form" />
        </button>

        <image posx=_posx+200 posy=_posy+100 src="image.jpg" width=300 height=150 opacity=0.6>
            <frame width=10 height=10 color=0xFFAAAA opacity=0.9 />
            <shadow offsetX=5 offsetY=5 blur=8 color=0x000000 opacity=0.4 />
        </image>

        <panel posx=_posx+400 posy=_posy+200 width=250 height=150 color=panelBackground>
            <header text="Important Section" fontSize=18 fontFamily="Tahoma" color=0xFFFFFF/>
            <scrollableArea>
                <textBlock fontSize=12 fontFamily="Verdana" color=0x000000 text="This is some scrollable content."/>
                <textBlock fontSize=12 fontFamily="Verdana" color=0x000000 text="More scrollable text."/>
                <textBlock fontSize=12 fontFamily="Verdana" color=0x000000 text="Even more scrollable content."/>
            </scrollableArea>
        </panel>

        <dropdown posx=_posx+500 posy=_posy+300 width=180 height=30 options="Option1,Option2,Option3,Option4" selected=0 color=dropdownBackground>
            <hoverEffect color=0x00FFFF/>
            <selectionEffect color=0xFFFF00/>
        </dropdown>

    </filledRect>

</main>
